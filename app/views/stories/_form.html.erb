<div class="container-fluid story-tabs open">
  <div class="row">
    <div class="container">
      <div class="row">
      <div role="tabpanel" class="tab_panel form">
        <ul class="nav nav-tabs  nav-justified" role="tablist">
          <li role="presentation" class="active"><a href="#tab-0" aria-controls="tab-0" class="tab-0" role="tab" data-toggle="tab"><i class="fa fa-edit"></i> Dercription</a></li>
          <li role="presentation"><a href="#tab-1" aria-controls="tab-1" class="tab-1" role="tab" data-toggle="tab"><i class="fa fa-picture-o"></i> Uppload picture</a></li>
          <li role="presentation"><a href="#tab-2" aria-controls="tab-2" class="tab-2" role="tab" data-toggle="tab"><i class="fa fa-files-o"></i>Picture album</a></li>
        </ul>
        <div class="tab-content myowl">
          <div role="tabpanel" class="tab-pane active" id="tab-0">
            <div class="container">
              <div class="forma">
                <form role="form">
                  <%= form_for(@story, :html => { multipart: true }) do |f| %>
                    <% if @story.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>
                        <ul>
                        <% @story.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>

                    <div class="form-group">
                      <%= f.label :title %><br>
                      <%= f.text_field :title, class: 'form-control', placeholder: 'Add a title to your story' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :description %><br>
                      <%= f.text_area :description, class: 'form-control', placeholder: 'Description of your story' %>
                    </div>
                    <div class="col-lg-5 col-lg-offset-5">
                      <div class="actions">
                        <%= f.submit 'Create Story', class: 'btn btn-success' %>
                      </div>
                    </div>
                  <% end %>
                </form>
              </div>
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tab-1">
            <div class="container">
              <input type="file">
            </div>
          </div>
          <div role="tabpanel" class="tab-pane" id="tab-2">
            <div class="container">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
